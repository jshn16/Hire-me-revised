<h1>Car Details</h1>

<form method="post">
    <fieldset>
        <label for="company">Company: *</label>
        <select id="company" name="company" required>
            {{#each companies}}
                {{selectOption this.name ../cars.company}}
            {{/each}}
        </select>
    </fieldset>

    <fieldset>
        <label for="name">Name: *</label>
        <input type="text" name="name" id="name" required value="{{cars.name}}" />
    </fieldset>

    <fieldset>
        <label for="year">Year: *</label>
        <input type="number" name="year" id="year" value="{{cars.year}}" />
    </fieldset>

    <fieldset>
        <label for="contactEmail">Contact Email:</label>
        <input type="email" name="contactEmail" id="contactEmail"  value="{{cars.contactEmail}}"/>
    </fieldset>

    <fieldset>
        <label for="odometer">Odometer: *</label>
        <input type="number" name="odometer" id="odometer" value="{{cars.odometer}}" />
    </fieldset>
    
    <button class="btn-style">Save</button>
</form>