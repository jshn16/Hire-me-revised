<h1>Register</h1>
{{#if messages}}
<p id="message" class="alert alert-danger">{{messages}}</p>
{{else}}
<p id="message" class="alert alert-warning">Please create your account</p>
{{/if}}
<form method="post">
        <fieldset>
                <label for="username" class="col-2 control-label">Username: *</label>
                <input name="username" id="username" required type="email" placeholder="email@email.com" />
        </fieldset>
        <fieldset>
                <label for="password" class="col-2 control-label">Password: *</label>
                <input name="password" id="password" type="password" required
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
                <img src="/images/show.png"  alt="Show/Hide" id="imgShowHide" onclick="showHide()">
        </fieldset>
        <fieldset>
                <label for="confirm" class="col-2 control-label">Confirm: *</label>
                <input name="confirm" id="confirm" type="password" required
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" onkeyup="return comparePasswords()" />
                <span id="pwMsg"></span>
        </fieldset>
        <fieldset>
                <button class="btn-style" onclick="return comparePasswords()">Register</button>
                <hr />
                Already have an account? <a href="/auth/login" title="Login">Login</a>
        </fieldset>
</form>